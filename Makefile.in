### midimap Makefile - for various flavors of unix

PROGRAMS = midimap
RM = /bin/rm
SRC_PATH = ..
INCLUDE = ..
OBJECT_PATH = @object_path@
vpath %.o $(OBJECT_PATH)

OBJECTS	=	RtMidi.o

CC       = @CXX@
DEFS     = @CPPFLAGS@
CFLAGS   = @CXXFLAGS@
CFLAGS  += $(shell pkg-config --cflags libmapper)
CFLAGS  += -I$(INCLUDE)
LIBRARY  = -framework CoreMIDI -framework CoreFoundation -framework CoreAudio
LIBRARY += $(shell pkg-config --libs libmapper)

%.o : $(SRC_PATH)/%.cpp
	$(CC) $(CFLAGS) $(DEFS) -c $(<) -o $(OBJECT_PATH)/$@

all : $(PROGRAMS)

midimap : midimap.cpp $(OBJECTS)
	$(CC) $(CFLAGS) $(DEFS) -o midimap midimap.cpp RtMidi.cpp $(LIBRARY)

clean : 
	$(RM) -f $(OBJECT_PATH)/*.o
	$(RM) -f $(PROGRAMS) *.exe
	$(RM) -f *~

distclean: clean
	$(RM) -f Makefile

strip : 
	strip $(PROGRAMS)
